/* pages/order/components/MpPopover/MpPopover.wxss */
.popover {
  position: relative;
}
.popover-layer {
  position: absolute;
  top: calc(100% + 8rpx);
  left: 0;
  padding-top: 8rpx;
}
.popover-layer::before {
  content: '';
  width: 24rpx;
  height: 24rpx;
  background: #fff;
  box-shadow: 0px 0px 16px 0px rgba(0, 0, 0, 0.1);
  border-radius: 8rpx;
  transform: rotate(45deg);
  position: absolute;
  left: 16rpx;
  top: 0;
  z-index: 2;
}
.popover-layer-inner {
  box-shadow: 0px 0px 16px 0px rgba(0, 0, 0, 0.1);
  border-radius: 8rpx;
}
.popover-layer-content {
  background: #fff;
  border-radius: 8rpx;
  position: relative;
  z-index: 3;
  white-space: nowrap;
}