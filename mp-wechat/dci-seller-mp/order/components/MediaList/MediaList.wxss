/* pages/order/components/MediaList/MediaList.wxss */
.multiple-images {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.multiple-images .img-box {
  position: relative;
  box-sizing: border-box;
  border-radius: 8rpx;
  overflow: hidden;
}
.multiple-images .img-box .img {
  width: 100%;
  height: 100%;
  display: block;
  background: #cff;
}
.multiple-images .img-box .cover {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  justify-content: center;
  align-items: center;
}