/* pages/order/productOrderDetail/components/ProductList/ProductList.wxss */
/* 产品 */
.product-card {
  display: flex;
}
.product-card + .product-card {
  margin-top: 32rpx;
}
.product-card .product-img-wrap {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  overflow: hidden;
}
.product-card .product-img {
  width: 100%;
  height: 100%;
  display: block;
  flex-shrink: 0;
  background: #cff;
}
.product-card .product-info {
  flex: 1;
  margin-left: 16rpx;
}
.product-card .product-name {
  font-size: 28rpx;
  color: #333333;
  font-weight: 600;
  line-height: 36rpx;
}
.product-card .info-row {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
}
.product-card .info-row.row1 {
  color: #999999;
  margin-top: 4rpx;
}
.product-card .info-row.row2 {
  color: #333333;
  margin-top: 16rpx;
}

/* 展开 */
.btn-exp {
  height: 64rpx;
  font-size: 24rpx;
  color: #83858B;
  margin-top: 16rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}